# ============================================================================
# Legal Assistant AI - Environment Variables Template
# Copy this file to .env and fill in your actual values
# ============================================================================

# Project Information
PROJECT_NAME=Legal Assistant AI
PROJECT_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Keys (Fill with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=qwen2.5:7b-instruct
OLLAMA_BACKUP_MODEL=mistral:7b
OLLAMA_TIMEOUT=300
OLLAMA_CONTEXT_LENGTH=4096

# Database Configuration
DATABASE_URL=sqlite:///legal_assistant.db
VECTOR_DB_PATH=./data/vector_db
BACKUP_DB_PATH=./backup/database

# File Paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed_phase_1
LOGS_PATH=./logs
CONFIG_PATH=./config

# Processing Configuration
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONCURRENT_JOBS=4
BATCH_SIZE=50

# Vector Database Settings
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_BACKUP_MODEL=sentence-transformers/distiluse-base-multilingual-cased
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.75
MAX_SEARCH_RESULTS=10
PERSIAN_EMBEDDING_MODEL=HooshvareLab/bert-fa-base-uncased

# Persian Language Settings
LANGUAGE=fa
PERSIAN_FONT_PATH=./fonts/iranian-sans.ttf
TEXT_DIRECTION=rtl

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
PASSWORD_SALT=your_salt_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Web Application Settings
HOST=localhost
PORT=8000
RELOAD=true
WORKERS=1

# Rate Limiting
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000
REQUESTS_PER_DAY=10000

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_CACHE=true

# Performance Settings
MAX_UPLOAD_SIZE=50MB
REQUEST_TIMEOUT=30
MAX_CONNECTIONS=100

# Feature Flags
ENABLE_DOCUMENT_COMPARISON=true
ENABLE_DRAFT_GENERATION=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_EXPORT=true

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ADMIN_EMAIL=admin@yourorganization.ir

# Backup Configuration
AUTO_BACKUP=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

# Development Settings
MOCK_EXTERNAL_APIS=false
USE_SAMPLE_DATA=false
ENABLE_PROFILING=false