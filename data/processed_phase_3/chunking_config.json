{
  "max_chunk_chars": 1000,
  "min_chunk_chars": 100,
  "overlap_chars": 150,
  "overlap_ratio": 0.15,
  "sentence_boundaries": {
    "primary": [
      ".",
      "؟",
      "!",
      "…"
    ],
    "secondary": [
      "،",
      "؛"
    ]
  },
  "preserve_headers": [
    "تبصره",
    "بند",
    "ماده",
    "فصل"
  ],
  "normalize_spaces": true,
  "preserve_original": true,
  "splitting_strategy": "sentence_aware",
  "prefer_article_chunks": true
}